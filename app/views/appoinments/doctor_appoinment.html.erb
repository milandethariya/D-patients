<div class="m-3 row d-flex justify-content-center">
  <div class="col-md-6">
    <div class="w-100 timeMagin">
      <div class="row">
        <h3 style="text-align: center;">Doctor Appoinments</h3>
      </div>
      <div class="row">
        <div class="table-responsive-md">
          <table class="table table-striped">
            <tr>
              <th scope="col">Patient Name</th>
              <th scope="col">Profile</th>
              <th scope="col">Age</th>
              <th scope="col">Date</th>
              <th scope="col">Start Time</th>
              <th scope="col">End Time</th>
            </tr>
            <% if @appoinments.present? %>
              <% @appoinments.each do |appoinment| %>
                <tr>
                  <td><%= appoinment.patient.name %></td>
                  <td><%= image_tag appoinment.patient.patient_profile_image.url,style: 'height:5vw;width:5vw;', class: "rounded-circle "if appoinment.patient.patient_profile_image?%></td>
                  <td><%= appoinment.patient.age%></td>
                  <td><%= appoinment.appoinment_date.strftime "%d/%m/%y" %></td>
                  <td><%= appoinment.start_time %></td>
                  <td><%= appoinment.end_time %></td>
                <tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="6">Data is not available</td>
              </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>  
</div>	